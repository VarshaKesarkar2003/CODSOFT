# include <iostream>
using namespace std;

int main()
{

  char op;
  float num1, num2;

  for(int i=0;i<4;i++)
  {
  cout << "\nEnter operator: +, -, *, /: \n";
  cin >> op;

  cout << "\nEnter two operands: ";
  cin >> num1 >> num2;

  switch(op) {

    case '+':
      cout << "\n"<<num1 << " + " << num2 << " = " << num1 + num2<<"\n";
      break;

    case '-':
      cout <<"\n"<< num1 << " - " << num2 << " = " << num1 - num2<<"\n";
      break;

    case '*':
      cout <<"\n"<< num1 << " * " << num2 << " = " << num1 * num2<<"\n";
      break;

    case '/':
      cout <<"\n"<< num1 << " / " << num2 << " = " << num1 / num2<<"\n";
      break;

    default:

      cout << "\nError! operator is not correct";
      break;
  }
  }

  return 0;
}
